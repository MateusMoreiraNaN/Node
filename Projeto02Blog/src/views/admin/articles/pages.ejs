<%- include('../../partials/header.ejs'); -%>
<%- include('../../partials/homeNavbar.ejs'); -%>
<body>
    
    <div class="container">
        <br>
        <% result.articles.rows.forEach(article =>{ %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
        <% }) %>

        <div class="row">
            <div class="col col-12">

                <a href="/articles/pages/<%= result.pages - 1 %>" style="float: left;"><<< Prev</a>

                <% if(result.next) { %>
                    <a href="/articles/pages/<%= result.pages + 1 %>" style="float: right;">Next >>></a>
                <% } %>
            </div>
            <hr>
        </div>
        <br>
        
    </div>
</body>
<%- include('../../partials/footer.ejs'); -%>